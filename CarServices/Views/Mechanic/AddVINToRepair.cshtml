@model AddVINToRepairViewModel
@{
    ViewData["Title"] = "AddVINToRepair";
}

<h1>AddVINToRepair</h1>

<form asp-action="AddVINToRepair" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="form-group row">
        <label asp-for="VIN" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="VIN" class="form-control" placeholder="VIN">
            <span asp-validation-for="VIN" class="text-danger"></span>
        </div>
    </div>
    @Html.HiddenFor(model => model.RepairId)
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Add VIN
            </button>
        </div>
    </div>
</form>