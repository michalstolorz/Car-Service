@model AddRepairViewModel
@{
    ViewData["Title"] = "AddRepair";
}

<h1>AddRepair</h1>

<form asp-action="AddRepair" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="ChoosenCarId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.ChoosenCarId, new SelectList(Model.CarList, "Value", "Text"), "Select car")
            <span asp-validation-for="ChoosenCarId" class="text-danger"></span>
            <a class="btn btn-primary" role="button" asp-controller="Office" asp-action="AddCar">Add new car</a>
        </div>
    </div>
    @*<div class="form-group row">
            <label asp-for="ChoosenTypeId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.ChoosenTypeId, new SelectList(Model.RepairTypeList, "Id", "Name"), "Select repair type", new { @style = "width:396px;" })
                <span asp-validation-for="ChoosenTypeId" class="text-danger"></span>
                <a class="btn btn-primary" role="button" asp-controller="Office" asp-action="AddRepairType">Add new repair type</a>
            </div>
        </div>*@
    <div>
        <a class="btn btn-primary" role="button" asp-controller="Office" asp-action="AddRepairType">Add new repair type</a>
        @for (int i = 0; i < Model.RepairTypeEntities.Count; i++)
        {
            <div>
                <input type="hidden" asp-for="@Model.RepairTypeEntities[i].RepairType.Id" />
                <input type="hidden" asp-for="@Model.RepairTypeEntities[i].RepairType.Name" />
                <input asp-for="@Model.RepairTypeEntities[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.RepairTypeEntities[i].IsSelected">
                    @Model.RepairTypeEntities[i].RepairType.Name
                </label>
            </div>
        }
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Add repair
            </button>
        </div>
    </div>
</form>