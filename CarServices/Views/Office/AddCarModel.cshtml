@model AddCarModelViewModel
@{
    ViewData["Title"] = "AddCarModel";
}

<h1>AddCarModel</h1>

<form asp-action="AddCarModel" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="NewCarModel" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NewCarModel" class="form-control" placeholder="Car Model">
            <span asp-validation-for="NewCarModel" class="text-danger"></span>
        </div>
    </div>
    @Html.HiddenFor(model => model.CarBrandId)
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Add new model
            </button>
        </div>
    </div>
</form>

<table class="table" style="margin-top: 20px">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Car Model</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cb in Model.CarModels)
        {
            <tr>
                <th scope="row">@cb.Id</th>
                <td>@cb.Name</td>
            </tr>
        }
    </tbody>
</table>