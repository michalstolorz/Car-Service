@model Customer
@{
    ViewData["Title"] = "UpdateCustomer";
}

<h1>UpdateCustomer</h1>

<form asp-action="UpdateCustomer" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="@Model.Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control" placeholder="@Model.Surname">
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TelephoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="TelephoneNumber" class="form-control" placeholder="@Model.TelephoneNumber">
            <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="@Model.Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    @Html.HiddenFor(model => model.Discount)
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Update customer
            </button>
        </div>
    </div>
</form>