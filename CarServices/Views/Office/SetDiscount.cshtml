@model SetDiscountViewModel
@{
    ViewData["Title"] = "SetDiscount";
}

<h1>SetDiscount</h1>

<form asp-action="SetDiscount" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.Id, new SelectList(Model.CustomerList, "Id", "Name"), "Select customer")
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Discount" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Discount" class="form-control" placeholder="Discount">
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Set discount
            </button>
        </div>
    </div>
</form>