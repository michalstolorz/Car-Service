@model AddRepairTypeViewModel
@{
    ViewData["Title"] = "AddRepairType";
}

<h1>AddRepairType</h1>

<form asp-action="AddRepairType" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="form-group row">
        <label asp-for="NewRepairType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NewRepairType" class="form-control" placeholder="Repair Type">
            <span asp-validation-for="NewRepairType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Add
            </button>
        </div>
    </div>
</form>

<table class="table" style="margin-top: 20px">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Repair Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cb in Model.RepairTypes)
        {
            <tr>
                <th scope="row">@cb.Id</th>
                <td>@cb.Name</td>
                @*<td><a class="btn btn-danger" role="button" asp-controller="Office" asp-action="DeleteRepairType" asp-route-id="@cb.Id">Delete</a></td>*@
            </tr>
        }
    </tbody>
</table>