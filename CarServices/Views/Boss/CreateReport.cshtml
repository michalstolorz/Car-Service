@model CreateReportViewModel
@{
    ViewData["Title"] = "CreateReport";
}

<h1>CreateReport</h1>

<form asp-action="CreateReport" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="ChoosenNumberOfDays" class="col-sm-2 col-form-label">Repoet length(days):</label>
        <div class="col-sm-10">
            <input asp-for="ChoosenNumberOfDays" class="form-control" type="number" placeholder="NumberOfDays">
            <span asp-validation-for="ChoosenNumberOfDays" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Submit
            </button>
        </div>
    </div>
</form>

<table class="table" style="margin-top: 20px">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">DateOfCompletion</th>
            <th scope="col">Cost</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Employee Surame</th>
            <th scope="col">Repair type</th>
            <th scope="col">Parts</th>
            <th scope="col">Part price</th>
            <th scope="col">Used quantity</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
            foreach (var m in Model.RepairList)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@m.Repair.DateOfCompletion</td>
                    <td>@m.Repair.Cost</td>
                    <td>@m.Employee.Name</td>
                    <td>@m.Employee.Surname</td>
                    <td>
                        <ul>
                            @foreach (var r in @m.RepairType)
                            {
                                <li>@r.RepairType.Name</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var p in @m.UsedPartsList)
                            {
                                <li>@p.Part.Name</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var p in @m.UsedPartsList)
                            {
                                <li>@p.Part.PartPrice</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var x in @m.UsedPartsList)
                            {
                                <li>@x.Quantity</li>
                            }
                        </ul>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>

