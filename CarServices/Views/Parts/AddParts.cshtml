@model AddPartsViewModel
@{
    ViewData["Title"] = "AddParts";
}

<h1>AddParts</h1>

<form asp-action="AddParts" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input min="1" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input min="1" asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PartPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PartPrice" class="form-control" />
            <span asp-validation-for="PartPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Add new part</button>
        </div>
    </div>
</form>
